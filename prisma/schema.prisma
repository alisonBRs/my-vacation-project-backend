generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Message{
id String @id @unique @default(uuid())
message String?
chat Chats? @relation(fields: [chatId],references: [id], onDelete: Cascade,onUpdate: Cascade)
chatId String?
@@map("message")
}

model Chats {
  id String @id @unique @default(uuid())
  user User? @relation(fields: [userId],references: [id],onDelete: Cascade,onUpdate: Cascade)
  userId String?
  message Message[]  
  openned Boolean?
  phone String?
  name String?   
  @@map("chats")
}

model User {
  id String @id @unique @default(uuid())
  chats Chats[]
  email String @unique
  password String 
  name String
  phone String?
}